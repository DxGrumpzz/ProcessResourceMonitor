<Window x:Class="ProcessMonitor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessMonitor.UI"
        mc:Ignorable="d"
    
        Title="MainWindow" 
        
        Height="450" 
        Width="800"
        
        d:DataContext="{x:Static local:MainWindowViewModel.DesignTimeData}">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="AUTO"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Back"
                HorizontalAlignment="Left"
                
                Command="{Binding BackCommand}"/>

        <!-- Main page presnter -->
        <ContentPresenter Content="{Binding CurrentMainView}"
                          
                          Grid.Row="1"/>

    </Grid>

</Window>